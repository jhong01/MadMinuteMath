<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
 >
    
    <RelativeLayout
        android:id="@+id/mathRelative2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@drawable/textlines"
         >


        <com.hsi.madminutemath.RobotoTextView
            android:id="@+id/topNumber2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/botNumber2"
            android:layout_marginTop="20dp"
            android:gravity="right"
            android:text=""
            android:textSize="40sp" />

        <com.hsi.madminutemath.RobotoTextView
            android:id="@+id/botNumber2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/topNumber2"
            android:layout_marginTop="5dp"
            android:gravity="right"
            android:text=""
            android:textSize="40sp" />
    </RelativeLayout>

    <com.hsi.madminutemath.RobotoTextView
        android:id="@+id/answer2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/mathRelative2"
        android:layout_below="@id/mathRelative2"
        android:gravity="right"
        android:paddingRight="5dp"
        android:text=""
        android:textSize="40sp"
        />
    

</RelativeLayout>
